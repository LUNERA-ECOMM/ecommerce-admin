rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth != null
        && request.auth.token.email in [
          "arbengrepi@gmail.com",
          "andreas.konga@gmail.com",
          "muliqiblerine@gmail.com"
        ];
    }

    // Storefront-specific collections (products, categories, promotions)
    // Structure: /{storefront}/products/items/{productId}
    // Structure: /{storefront}/categories/items/{categoryId}
    match /{storefront}/products/items/{productId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
      allow update: if request.auth != null
        && (!request.resource.data.diff(resource.data).affectedKeys().hasAny([
          'name', 'slug', 'categoryIds', 'supplierId', 'basePrice', 'description', 'images', 'extraImages', 'tags', 'active', 'storefronts', 'createdAt'
        ]));
    }

    match /{storefront}/products/items/{productId}/variants/{variantId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    match /{storefront}/categories/items/{categoryId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
      allow update: if request.auth != null
        && (!request.resource.data.diff(resource.data).affectedKeys().hasAny([
          'name', 'slug', 'description', 'imageUrl', 'active', 'previewProductIds', 'storefronts', 'createdAt'
        ]));
    }

    match /{storefront}/promotions/items/{promoId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    match /suppliers/{supplierId} {
      allow read, write: if isAdmin();
    }

    match /userEvents/{eventId} {
      allow create: if request.auth != null;
      allow read: if isAdmin();
      allow update, delete: if isAdmin();
    }

    match /orders/{orderId} {
      allow create: if request.auth != null
        && (request.resource.data.userId == request.auth.uid || request.resource.data.userId == null);

      allow read: if request.auth != null
        && (resource.data.userId == request.auth.uid || isAdmin());

      allow update, delete: if isAdmin();
    }

    match /carts/{cartId} {
      allow read: if request.auth != null && request.auth.uid == cartId;
      allow create: if request.auth != null
        && request.auth.uid == cartId
        && request.auth.uid == request.resource.data.userId;
      allow update: if request.auth != null
        && request.auth.uid == cartId
        && (!resource.exists || request.auth.uid == resource.data.userId)
        && request.auth.uid == request.resource.data.userId;
      allow delete: if request.auth != null
        && request.auth.uid == cartId
        && (!resource.exists || request.auth.uid == resource.data.userId);
    }

    match /shopifyItems/{itemId} {
      allow read, write: if isAdmin();
    }

    // Storefront site info (per storefront doc, e.g. /LUNERA/Info)
    match /{storefront}/Info {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
